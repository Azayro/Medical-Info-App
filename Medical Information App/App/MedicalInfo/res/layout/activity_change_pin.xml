<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#A4A4A4"
    tools:context="com.example.medicalinfo.ChangePinActivity$PlaceholderFragment" >

    <TextView
        android:id="@+id/changePinTitleTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Change pin"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FF0000" />

    <TextView
        android:id="@+id/currentPinTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/changePinTitleTV"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:text="Please input current pin:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FF0000" />

    <EditText
        android:id="@+id/currentPinEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/newPinEdit"
        android:layout_below="@+id/currentPinTV"
        android:ems="10"
        android:inputType="numberPassword"
        android:textColor="#FFFFFF" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/newPinTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/currentPinEdit"
        android:layout_centerHorizontal="true"
        android:text="Please input new pin:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FF0000" />

    <EditText
        android:id="@+id/newPinEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/confirmPinEdit"
        android:layout_below="@+id/newPinTV"
        android:ems="10"
        android:inputType="numberPassword"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/confirmPinTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newPinEdit"
        android:layout_centerHorizontal="true"
        android:text="Confirm pin:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FF0000" />

    <EditText
        android:id="@+id/confirmPinEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/confirmPinTV"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="numberPassword"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/setNewPinBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/confirmPinEdit"
        android:layout_centerHorizontal="true"
        android:text="Set New Pin"
        android:textColor="#FFFFFF" />

</RelativeLayout>
