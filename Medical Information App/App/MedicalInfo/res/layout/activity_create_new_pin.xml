<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#A4A4A4"
    tools:context="com.example.medicalinfo.ChangePinActivity$PlaceholderFragment" >

    <TextView
        android:id="@+id/newPinCreateTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="49dp"
        android:text="Please input new pin:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FF0000" />

    <EditText
        android:id="@+id/newPinCreateEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newPinCreateTV"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Desired Pin"
        android:inputType="numberPassword"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/confirmPinCreateTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newPinCreateEdit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="Confirm pin:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FF0000" />

    <EditText
        android:id="@+id/confirmPinCreateEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/confirmPinCreateTV"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Confirm Pin"
        android:inputType="numberPassword"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/setPinCreateBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/confirmPinCreateEdit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="96dp"
        android:text="Set Pin"
        android:textColor="#FFFFFF" />

</RelativeLayout>
