            android:name="com.example.medicalinfo.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.medicalinfo.AboutActivity"
            android:label="@string/title_activity_about" >
        </activity>
        <activity
            android:name="com.example.medicalinfo.ContactActivity"
            android:label="@string/title_activity_contact" >
        </activity>
        <activity
            android:name="com.example.medicalinfo.ChangePinActivity"
            android:label="@string/title_activity_change_pin" >
        </activity>
        <activity
            android:name="com.example.medicalinfo.CreateNewPin"
            android:label="@string/title_activity_create_new_pin" >
        </activity>
        <activity
            android:name="com.example.medicalinfo.EnterPinToEdit"
            android:label="@string/title_activity_enter_pin_to_edit" >
        </activity>
